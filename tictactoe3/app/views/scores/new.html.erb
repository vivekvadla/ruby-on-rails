<div id="cpu"  style="float:right">
  <h5>Play with cpu</h5>
  <button class="btn btn-info" id="cpu" onclick='cpu()'>start with cpu</button>
</div>

<div class="player-select"  style="padding:10px;">
  <%= form_for @score, url: scores_path, local: true do |form| %>
  <p>
    <b><%= form.label :player_1 %>:</b>
    <%= form.select(:player1_id) do %>
    <% @players.active.each do |player| %>
    <%= content_tag(:option, player.name, value: player.id) %>
    <% end %>
    <% end %>
  </p>
  <p>
    <b><%= form.label :player_2 %>:</b>
    <%= form.select(:player2_id) do %>
    <% @players.active.each do |player| %>
    <%= content_tag(:option, player.name, value: player.id) %>
    <% end %>
    <% end %>
  </p>
  <p >
    <%= form.submit 'save players',class:'player-selected' %>
  </p>
  <% end %>
</div>




<div class="container" id="cpu-div" style="display:none">
  <table class="table-cpu">
    <tr>
      <td class="cell" id="0"></td>
      <td class="cell" id="1"></td>
      <td class="cell" id="2"></td>
    </tr>
    <tr>
      <td class="cell" id="3"></td>
      <td class="cell" id="4"></td>
      <td class="cell" id="5"></td>
    </tr>
    <tr>
      <td class="cell" id="6"></td>
      <td class="cell" id="7"></td>
      <td class="cell" id="8"></td>
    </tr>
  </table>
  <div class="endgame">
    <div class="text">
      
    </div>
  </div>
  <button id="replay">replay</button>
</div>