<!-- Tab panes -->
<div class="tab-content">
    <div id="home" class="container tab-pane active"><br>
        <%= link_to "Add Player", new_player_path , class:'btn btn-primary', id:'add_new' %>
        <table class="table table-striped" id="players_tab">
            <thead>
                <tr>
                    <th>Avatar</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Score</th>
                    <th>Edit</th>
                    <th>Delete</th>    
                </tr>
            </thead>
            <tbody>
                <% @players.active.each do |player| %>
                <tr>
                    <td><%= image_tag(Avatar.find_by(player_id: player.id).image_url(:thumb).to_s)  %></td>
                    <td><%= player.name %>
                    <% if @winner.length > 2 %>
                    <% if @winner[0].id == player.id %>
                    <%= image_tag("gold.png", {:style => "width:20px;height:20px;"}) %>
                    <% end %>
                    <% if @winner[1].id == player.id %>
                    <%= image_tag("silver.png", {:style => "width:20px;height:20px;"}) %>
                    <% end %>
                    <% if @winner[2].id == player.id %>
                    <%= image_tag("bronze.png", {:style => "width:20px;height:20px;"}) %>
                    <% end %>
                    <% end %>
                    </td>
                    <td><%= player.status %></td>
                    <td><%= player.score %></td>
                    <td><%= link_to "Edit",edit_player_path(player) ,class:'btn btn-info btn-sm'%></td>
                    <td><%= link_to "Delete", player,method: :delete ,data: {confirm:"Are you sure?"},class:'btn btn-warning btn-sm' %></td>
                </tr>
                
                <% end %>
            </tbody>
        </table>
        
    </div>
    
</div>